# Service backup module configuration

# Restic
RESTIC_REPOSITORY=b2:homelab-backups:repo
RESTIC_PASSWORD=your-secure-encryption-password

# Backblaze B2
B2_ACCOUNT_ID=
B2_ACCOUNT_KEY=
B2_BUCKET=homelab-backups

# DB dump settings
BACKUP_DUMP_DIR=/data/appdata/_backup/db_dumps
BACKUP_DUMP_RETENTION_DAYS=7
BACKUP_DRY_RUN=false

# Scheduler - hour to run backup check (0-23). The script runs daily at this hour
# and decides which backup sets to run based on each set's frequency.
BACKUP_SCHEDULE_HOUR=3
